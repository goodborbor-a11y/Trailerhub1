# ===========================================
# Environment Variables Template for VPS Deployment
# Copy this file to .env and fill in your values
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://movieapp:your_secure_password@localhost:5432/movietrailers
POSTGRES_USER=movieapp
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=movietrailers

# JWT Configuration (generate a secure random string)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://yourdomain.com

# TMDB API Key (optional - for movie imports)
TMDB_API_KEY=your_tmdb_api_key

# File Upload Configuration
UPLOAD_DIR=/var/www/uploads
MAX_FILE_SIZE=10485760

# SSL Configuration (optional)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Vite/Frontend Variables (used during build)
VITE_API_URL=https://yourdomain.com/api
VITE_APP_NAME=Movie Trailers
